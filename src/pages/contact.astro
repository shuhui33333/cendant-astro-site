---
import TemplateLayout from "../layouts/TemplateLayout.astro";
---

<TemplateLayout title="联系我们">

  <!-- ===== Subpage Intro Banner（完全沿用模板结构）===== -->
  <div class="subpage-banner contact-banner">
    <div class="container">
      <h2>联系我们</h2>
      <p>CONTACT US</p>

      <div class="row banner-info">
        <div class="col-md-3 col-sm-6 banner-item">
          <img src="/images/contacts/wechat.png" alt="WeChat" />
          <h4>微信</h4>
          <p>your-wechat-id</p>
        </div>

        <div class="col-md-3 col-sm-6 banner-item">
          <img src="/images/contacts/phone.png" alt="Phone" />
          <h4>电话</h4>
          <p>+61 420 616 883</p>
        </div>

        <div class="col-md-3 col-sm-6 banner-item">
          <img src="/images/contacts/email.png" alt="Email" />
          <h4>邮箱</h4>
          <p>info@cendantpgau.com</p>
        </div>

        <div class="col-md-3 col-sm-6 banner-item">
          <img src="/images/contacts/whatsapp.png" alt="WhatsApp" />
          <h4>WhatsApp</h4>
          <p>+61 420 616 883</p>
        </div>
      </div>
    </div>
  </div>

</TemplateLayout>

<style>
/* 只做“增强”，不破坏模板 */

/* 图标尺寸统一 */
.contact-banner .banner-item img {
  width: 42px;
  height: 42px;
  margin-bottom: 12px;
}

/* 文字居中（模板一般默认是左对齐） */
.contact-banner .banner-item {
  text-align: center;
}

/* 副标题白色（防止模板被覆盖） */
.contact-banner h2,
.contact-banner p,
.contact-banner h4 {
  color: #fff;
}

/* 小屏优化 */
@media (max-width: 768px) {
  .contact-banner .banner-item {
    margin-bottom: 24px;
  }
}
</style>