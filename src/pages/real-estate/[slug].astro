---
import TemplateLayout from "../../layouts/TemplateLayout.astro";
import { getRealEstatePosts } from "../../lib/contentful";

const posts = await getRealEstatePosts(30);

// 你要的分类入口（对应你已经创建的文件路径）
const saleCats = [
  { href: "/real-estate/sale/apartment", label: "公寓" },
  { href: "/real-estate/sale/second-hand", label: "二手房" },
  { href: "/real-estate/sale/townhouse", label: "联排别墅" },
  { href: "/real-estate/sale/land-villa", label: "土地别墅" },
  { href: "/real-estate/sale/commercial", label: "商业办公楼" },
  { href: "/real-estate/sale/land", label: "土地开发" },
  { href: "/real-estate/sale/farm", label: "农场" },
  { href: "/real-estate/sale/hotel", label: "酒店" },
];

const rentCats = [
  { href: "/real-estate/rent/apartment", label: "公寓" },
  { href: "/real-estate/rent/townhouse", label: "联排别墅" },
  { href: "/real-estate/rent/land-villa", label: "土地别墅" },
  { href: "/real-estate/rent/commercial", label: "商业办公" },
];
---

<TemplateLayout title="房产资讯" subtitle="REAL ESTATE">
  <div class="tpl-page">
    <section class="block">
      <h2 class="block-title">房产售卖资讯</h2>
      <div class="choice-list">
        {saleCats.map((c) => (
          <a class="choice" href={c.href}>
            <span class="choice__dot" aria-hidden="true"></span>
            <span class="choice__label">{c.label}</span>
          </a>
        ))}
      </div>
    </section>

    <section class="block">
      <h2 class="block-title">房产出租资讯</h2>
      <div class="choice-list">
        {rentCats.map((c) => (
          <a class="choice" href={c.href}>
            <span class="choice__dot" aria-hidden="true"></span>
            <span class="choice__label">{c.label}</span>
          </a>
        ))}
      </div>
    </section>

    <section class="block">
      <div class="head-row">
        <h2 class="block-title" style="margin:0;">最新发布</h2>
        <span class="hint">后台更新后会自动同步</span>
      </div>

      {posts && posts.length ? (
        <div class="post-list">
          {posts.map((p) => (
            <a class="post-card" href={`/real-estate/sale/${p.category || "apartment"}`}>
              <div class="post-top">
                <div class="tag">{p.dealType || "资讯"}</div>
                <div class="date">
                  {p.publishDate ? new Date(p.publishDate).toLocaleDateString("zh-CN") : ""}
                </div>
              </div>

              <div class="title">{p.title}</div>
              {p.summary ? <div class="summary">{p.summary}</div> : null}
            </a>
          ))}
        </div>
      ) : (
        <div class="empty">
          <b>目前还没有文章。</b>
          <div>请在 Contentful 新建 <code>realEstatePost</code>，填写 <code>title / publishDate / category(or catagory) / dealType</code>，并发布（Published）。</div>
        </div>
      )}
    </section>
  </div>

  <style>
    /* 下面这套是“子页面列表”的干净商业风，不用蓝色块 */
    .tpl-page{
      max-width: 1100px;
      margin: 0 auto;
      padding: 28px 18px 60px;
    }

    .block{
      background: #fff;
      border: 1px solid #e9edf6;
      border-radius: 18px;
      padding: 18px;
      margin: 0 0 16px;
    }

    .head-row{
      display:flex;
      align-items:baseline;
      justify-content:space-between;
      gap:12px;
      margin-bottom: 10px;
    }

    .block-title{
      font-size: 20px;
      font-weight: 900;
      letter-spacing: .5px;
      color:#0b1f4d;
      margin: 0 0 12px;
    }
    .hint{ font-size: 12px; opacity: .65; }

    .choice-list{
      display:grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 12px;
    }
    @media (max-width: 900px){ .choice-list{ grid-template-columns: repeat(2, minmax(0, 1fr)); } }
    @media (max-width: 520px){ .choice-list{ grid-template-columns: 1fr; } }

    .choice{
      display:flex;
      align-items:center;
      gap: 12px;
      padding: 14px 14px;
      border-radius: 16px;
      border: 1px solid #dfe6f3;
      text-decoration:none;
      color:#0e1a2b;
      background:#fff;
      transition: transform .15s ease, box-shadow .15s ease;
    }
    .choice:hover{
      transform: translateY(-1px);
      box-shadow: 0 10px 28px rgba(12, 28, 76, .08);
    }
    .choice__dot{
      width: 10px; height: 10px;
      border-radius: 999px;
      background: #26325c;
      flex: 0 0 auto;
    }
    .choice__label{
      font-size: 16px;
      font-weight: 800;
      letter-spacing: .5px;
    }

    .post-list{
      display:grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 12px;
    }
    @media (max-width: 900px){ .post-list{ grid-template-columns: 1fr; } }

    .post-card{
      display:block;
      border: 1px solid #e9edf6;
      border-radius: 16px;
      padding: 14px;
      text-decoration:none;
      background:#fff;
      color:#0e1a2b;
    }

    .post-top{
      display:flex;
      justify-content:space-between;
      align-items:center;
      margin-bottom: 10px;
      gap: 10px;
    }
    .tag{
      font-size: 12px;
      font-weight: 800;
      color:#0b1f4d;
      border: 1px solid #dfe6f3;
      padding: 4px 10px;
      border-radius: 999px;
      background:#f7f9ff;
    }
    .date{ font-size: 12px; opacity: .7; }

    .title{
      font-size: 16px;
      font-weight: 900;
      margin-bottom: 6px;
      color:#0b1f4d;
    }
    .summary{
      line-height: 1.8;
      font-size: 14px;
      opacity: .85;
    }

    .empty{
      border: 1px dashed #cfd8ef;
      border-radius: 16px;
      padding: 16px;
      background: #fbfcff;
      line-height: 1.9;
    }
    code{ background:#f2f4ff; padding:2px 6px; border-radius:8px; }
  </style>
</TemplateLayout>