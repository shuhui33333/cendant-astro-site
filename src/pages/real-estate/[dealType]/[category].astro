---
import TemplateLayout from "../../../layouts/TemplateLayout.astro";
import { getRealEstatePosts } from "../../../lib/contentful";
import {
  SALE_CATEGORY_SLUGS,
  RENT_CATEGORY_SLUGS,
  CATEGORY_ZH_MAP,
  normalizeKey,
} from "../../../lib/realEstateTaxonomy";

export const prerender = true;

function labelDealType(d: string) {
  return d === "sale" ? "房产售卖资讯" : "房产出租资讯";
}

function toHttps(url?: string | null) {
  if (!url) return "";
  return url.startsWith("//") ? `https:${url}` : url;
}

/** ✅ 这个函数决定“哪些分类页会被生成” */
export async function getStaticPaths() {
  // 1) 先生成你“预设的全部分类页”（保证没内容也有页面）
  const basePaths = [
    ...SALE_CATEGORY_SLUGS.map((c) => ({ dealType: "sale", category: c })),
    ...RENT_CATEGORY_SLUGS.map((c) => ({ dealType: "rent", category: c })),
  ];

  // 2) 再从 Contentful 真实数据中补充“实际出现过的组合”（更稳）
  const posts = await getRealEstatePosts(500);
  const fromContentful = (posts ?? [])
    .map((p: any) => ({
      dealType: normalizeKey(p.dealType),
      category: normalizeKey(p.category),
    }))
    .filter((x: any) => x.dealType && x.category);

  // 3) 去重
  const keySet = new Set<string>();
  const merged = [...basePaths, ...fromContentful].filter((x) => {
    const k = `${x.dealType}/${x.category}`;
    if (keySet.has(k)) return false;
    keySet.add(k);
    return true;
  });

  return merged.map((x) => ({ params: { dealType: x.dealType, category: x.category } }));
}

const { dealType, category } = Astro.params as { dealType: string; category: string };

const dealTypeKey = normalizeKey(dealType);   // sale/rent
const categoryKey = normalizeKey(category);   // apartment/...

const dealZh = labelDealType(dealTypeKey);
const categoryZh = CATEGORY_ZH_MAP[categoryKey] ?? categoryKey;

const allPosts = await getRealEstatePosts(500);

/** ✅ 核心：过滤时也全部归一化（中文/英文/SELL/出售都能匹配） */
const posts =
  (allPosts ?? []).filter((p: any) => {
    const pDeal = normalizeKey(p.dealType);
    const pCat = normalizeKey(p.category);
    return pDeal === dealTypeKey && pCat === categoryKey;
  });
---

<TemplateLayout title={`${dealZh} - ${categoryZh}`} subtitle="REAL ESTATE">
  <section class="section-padding re-wrap listing-section">
    <div class="container">

      <!-- 你现有的中文标题风格 -->
      <div class="section-title re-title">
        <h2>{dealZh} · {categoryZh}</h2>
      </div>

      <!-- 模板风格标题：黑色 -->
      <div class="re-list-head">
        <h2 class="re-list-title">
          {dealTypeKey === "sale" ? "Properties For Sale" : "Properties For Rent"}
        </h2>
      </div>

      {posts.length ? (
        <div class="re-prop-grid">
          {posts.map((p: any) => {
            const cover = toHttps(p.image); // ✅ 你 contentful.ts 已返回 image
            return (
              <a class="re-prop" href={`/real-estate/${p.slug}`}>
                <div class="re-prop-img">
                  {cover ? (
                    <img src={cover} alt={p.title ?? "property"} loading="lazy" />
                  ) : (
                    <div class="re-prop-placeholder">No Image</div>
                  )}
                  <div class="re-prop-overlay"></div>
                </div>

                <div class="re-prop-content">
                  <div class="re-prop-stars">★★★★★</div>

                  <div class="re-prop-title">
                    {(p.title ?? "").toString().toUpperCase()}
                  </div>

                  <div class="re-prop-meta">
                    <span class="re-prop-meta-strong">{categoryZh}</span>
                    <span class="re-prop-meta-sep">|</span>
                    <span class="re-prop-meta-light">
                      {p.publishDate ? new Date(p.publishDate).toLocaleDateString("zh-CN") : ""}
                    </span>
                  </div>

                  {(p.summary) ? (
                    <div class="re-prop-desc">
                      {String(p.summary).slice(0, 70)}…
                    </div>
                  ) : null}
                </div>
              </a>
            );
          })}
        </div>
      ) : (
        <div class="empty">
          <p><strong>当前分类暂无内容</strong></p>
          <p style="opacity:.85;margin:10px 0 0;">
            你仍然可以访问这个分类页；等你在 Contentful 发布房源后，这里会自动显示。
          </p>
          <p style="margin-top:10px;opacity:.75;">
            当前路径：<code>{dealTypeKey}/{categoryKey}</code>
          </p>
        </div>
      )}

    </div>
  </section>
</TemplateLayout>

<style>
/* 顶部“房产售卖资讯 · 公寓”标题 */
.section-title.re-title { margin: 0 0 18px; }
.section-title.re-title h2 {
  font-size: 22px !important;
  line-height: 1.25 !important;
  font-weight: 900;
  letter-spacing: .5px;
  color: #0b1b54;
  margin: 0;
}
.section-title.re-title h2::after{
  content:"";
  display:block;
  width:56px;
  height:3px;
  background:#f2a23a;
  border-radius:999px;
  margin-top:10px;
}

/* Properties For Sale/Rent：黑色 */
.re-list-head{
  text-align:center;
  margin: 12px 0 28px;
}
.re-list-title{
  margin:0;
  font-size: 44px;
  font-weight: 900;
  color:#000;
  line-height:1.05;
  position:relative;
  display:inline-block;
  padding-bottom: 20px;
}
.re-list-title::after{
  content:"";
  display:block;
  width: 320px;
  max-width: 78vw;
  height: 2px;
  background:#000;
  margin: 14px auto 0;
}
.re-list-title::before{
  content:"";
  width: 16px;
  height: 16px;
  border: 2px solid #000;
  transform: rotate(45deg);
  position:absolute;
  left:50%;
  bottom: 6px;
  margin-left:-8px;
  background:#fff;
}

/* 一行 3 个 */
.re-prop-grid{
  display:grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 26px;
}
@media (max-width: 992px){
  .re-prop-grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
  .re-list-title{ font-size: 34px; }
}
@media (max-width: 576px){
  .re-prop-grid{ grid-template-columns: 1fr; }
  .re-list-title{ font-size: 30px; }
}

/* 卡片 */
.re-prop{
  position: relative;
  display:block;
  text-decoration:none;
  overflow:hidden;
  background:#111;
  min-height: 420px;
  border-radius: 2px;
}
.re-prop-img{ position:absolute; inset:0; background:#222; }
.re-prop-img img{
  width:100%;
  height:100%;
  object-fit: cover;
  display:block;
}
.re-prop-placeholder{
  width:100%;
  height:100%;
  display:flex;
  align-items:center;
  justify-content:center;
  color: rgba(255,255,255,.75);
  font-weight:800;
}
.re-prop-overlay{
  position:absolute;
  inset:0;
  background: rgba(0,0,0,.38);
  transition: background .2s ease;
}
.re-prop-content{
  position:relative;
  z-index:2;
  height:100%;
  padding: 26px 26px 22px;
  color:#fff;
  display:flex;
  flex-direction:column;
}
.re-prop-stars{
  color:#f2a23a;
  letter-spacing: 4px;
  font-size: 14px;
  margin-bottom: 12px;
}
.re-prop-title{
  font-size: 22px;
  font-weight: 900;
  letter-spacing: 2px;
  margin: 0 0 18px;
}
.re-prop-meta{
  margin-top:auto;
  font-size: 14px;
  letter-spacing: 1px;
  opacity: .95;
}
.re-prop-meta-strong{ font-weight: 900; }
.re-prop-meta-sep{ margin: 0 10px; opacity:.8; }
.re-prop-meta-light{ opacity:.9; }
.re-prop-desc{
  margin-top: 14px;
  font-size: 13px;
  line-height: 1.7;
  opacity: .9;
  max-width: 92%;
}
.re-prop:hover .re-prop-overlay{ background: rgba(0,0,0,.50); }
.re-prop:hover{ transform: translateY(-3px); transition: transform .25s ease; }

/* 空状态 */
.empty {
  padding: 34px;
  text-align: center;
  background: #fff;
  border-radius: 12px;
  border: 1px dashed rgba(11,27,84,.25);
}

/* ✅ 和底部黑色 footer 拉开距离 */
.listing-section{
  padding-bottom: 80px;
}
</style>