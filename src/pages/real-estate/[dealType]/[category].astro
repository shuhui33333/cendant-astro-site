---
import TemplateLayout from "../../../layouts/TemplateLayout.astro";
import { getRealEstatePosts } from "../../../lib/contentful";
import {
  CATEGORY_ZH_MAP,
  normalizeKey,
} from "../../../lib/realEstateTaxonomy";

export const prerender = false; // ✅ 改成 SSR，避免构建期拿不到 env

function labelDealType(d: string) {
  return d === "sale" ? "房产售卖资讯" : "房产出租资讯";
}

function toHttps(url?: string | null) {
  if (!url) return "";
  return url.startsWith("//") ? `https:${url}` : url;
}

/**
 * ✅ Cloudflare Pages runtime env + 本地 dev 兜底
 * 兼容多种注入路径：
 * - Astro.locals.runtime.env
 * - Astro.locals.cloudflare.env
 * - Astro.locals.env
 */
function getCfEnv() {
  const runtimeEnv =
    (Astro.locals as any)?.runtime?.env ??
    (Astro.locals as any)?.cloudflare?.env ??
    (Astro.locals as any)?.env ??
    {};

  const buildEnv = (import.meta as any)?.env ?? {};
  const merged = { ...buildEnv, ...runtimeEnv }; // SSR 以 runtime 为准

  return {
    CONTENTFUL_SPACE_ID: merged.CONTENTFUL_SPACE_ID,
    CONTENTFUL_DELIVERY_TOKEN: merged.CONTENTFUL_DELIVERY_TOKEN,
    CONTENTFUL_ENVIRONMENT: merged.CONTENTFUL_ENVIRONMENT ?? "master",
  };
}

const { dealType, category } = Astro.params as { dealType?: string; category?: string };

const dealTypeKey = normalizeKey(dealType);   // sale/rent
const categoryKey = normalizeKey(category);   // apartment/...

const dealZh = labelDealType(dealTypeKey);
const categoryZh = CATEGORY_ZH_MAP[categoryKey] ?? categoryKey;

const cfEnv = getCfEnv();

// ✅ 防止非法 URL
const isValidDeal = dealTypeKey === "sale" || dealTypeKey === "rent";
if (!isValidDeal) Astro.response.status = 404;

// ✅ 拉取数据（SSR 时 runtime env 可用）
let allPosts: any[] = [];
if (isValidDeal && cfEnv.CONTENTFUL_SPACE_ID && cfEnv.CONTENTFUL_DELIVERY_TOKEN) {
  allPosts = await getRealEstatePosts(cfEnv, 500);
} else {
  console.error("[real-estate/[dealType]/[category]] Missing Contentful env", {
    hasSpace: !!cfEnv.CONTENTFUL_SPACE_ID,
    hasToken: !!cfEnv.CONTENTFUL_DELIVERY_TOKEN,
    env: cfEnv.CONTENTFUL_ENVIRONMENT,
    dealType,
    category,
  });
}

// ✅ 核心：过滤时也全部归一化（中文/英文/SELL/出售都能匹配）
// 注意：这里用 normalizeKey(p.dealType / p.category) 以你 taxonomy 的逻辑为准
const posts = (allPosts ?? []).filter((p: any) => {
  const pDeal = normalizeKey(p?.dealType);
  const pCat = normalizeKey(p?.category ?? (p as any)?.catagory);
  return pDeal === dealTypeKey && pCat === categoryKey;
});

// ✅ 标题
const pageTitle = `${dealZh} - ${categoryZh}`;
---

<TemplateLayout title={pageTitle} subtitle="REAL ESTATE">
  <section class="section-padding re-wrap listing-section">
    <div class="container">
      <!-- 中文标题 -->
      <div class="section-title re-title">
        <h2>{dealZh} · {categoryZh}</h2>
      </div>

      <!-- 黑色大标题 -->
      <div class="re-list-head">
        <h2 class="re-list-title">
          {dealTypeKey === "sale" ? "Properties For Sale" : "Properties For Rent"}
        </h2>
      </div>

      {posts.length ? (
        <div class="re-prop-grid">
          {posts.map((p: any) => {
            const cover = toHttps(p?.image) || toHttps(p?.imageUrls?.[0]) || "";
            return (
              <a class="re-prop" href={`/real-estate/${p.slug}`}>
                <div class="re-prop-img">
                  {cover ? (
                    <img src={cover} alt={p.title ?? "property"} loading="lazy" />
                  ) : (
                    <div class="re-prop-placeholder">No Image</div>
                  )}
                  <div class="re-prop-overlay"></div>
                </div>

                <div class="re-prop-content">
                  <div class="re-prop-title">
                    {(p.title ?? "").toString().toUpperCase()}
                  </div>

                  <div class="re-prop-meta">
                    <span class="re-prop-meta-strong">{categoryZh}</span>
                    <span class="re-prop-meta-sep">|</span>
                    <span class="re-prop-meta-light">
                      {p.publishDate ? new Date(p.publishDate).toLocaleDateString("zh-CN") : ""}
                    </span>
                  </div>

                  {p.summary ? (
                    <div class="re-prop-desc">
                      {String(p.summary).slice(0, 70)}…
                    </div>
                  ) : null}
                </div>
              </a>
            );
          })}
        </div>
      ) : (
        <div class="empty">
          <p><strong>当前分类暂无内容</strong></p>
          {!cfEnv.CONTENTFUL_SPACE_ID || !cfEnv.CONTENTFUL_DELIVERY_TOKEN ? (
            <p style="opacity:.7;margin:8px 0 0;">
              （提示：本页未读取到 Contentful 环境变量，请检查 Cloudflare Pages 的环境变量是否已配置到 Production）
            </p>
          ) : null}
        </div>
      )}
    </div>
  </section>
</TemplateLayout>

<style>
.section-title.re-title { margin: 0 0 18px; }
.section-title.re-title h2 {
  font-size: 22px !important;
  line-height: 1.25 !important;
  font-weight: 900;
  letter-spacing: .5px;
  color: #0b1b54;
  margin: 0;
}
.section-title.re-title h2::after{
  content:"";
  display:block;
  width:56px;
  height:3px;
  background:#f2a23a;
  border-radius:999px;
  margin-top:10px;
}

.re-list-head{
  text-align:center;
  margin: 12px 0 28px;
}
.re-list-title{
  margin:0;
  font-size: 44px;
  font-weight: 900;
  color:#000;
  line-height:1.05;
  position:relative;
  display:inline-block;
  padding-bottom: 20px;
}
.re-list-title::after{
  content:"";
  display:block;
  width: 320px;
  max-width: 78vw;
  height: 2px;
  background:#000;
  margin: 14px auto 0;
}
.re-list-title::before{
  content:"";
  width: 16px;
  height: 16px;
  border: 2px solid #000;
  transform: rotate(45deg);
  position:absolute;
  left:50%;
  bottom: 6px;
  margin-left:-8px;
  background:#fff;
}

.re-prop-grid{
  display:grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 26px;
}
@media (max-width: 992px){
  .re-prop-grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
  .re-list-title{ font-size: 34px; }
}
@media (max-width: 576px){
  .re-prop-grid{ grid-template-columns: 1fr; }
  .re-list-title{ font-size: 30px; }
}

.re-prop{
  position: relative;
  display:block;
  text-decoration:none;
  overflow:hidden;
  background:#111;
  min-height: 420px;
  border-radius: 2px;
  transition: transform .25s ease;
}
.re-prop-img{ position:absolute; inset:0; background:#222; }
.re-prop-img img{
  width:100%;
  height:100%;
  object-fit: cover;
  display:block;
}
.re-prop-placeholder{
  width:100%;
  height:100%;
  display:flex;
  align-items:center;
  justify-content:center;
  color: rgba(255,255,255,.75);
  font-weight:800;
}
.re-prop-overlay{
  position:absolute;
  inset:0;
  background: rgba(0,0,0,.38);
  transition: background .2s ease;
}
.re-prop-content{
  position:relative;
  z-index:2;
  height:100%;
  padding: 26px 26px 22px;
  color:#fff;
  display:flex;
  flex-direction:column;
}

.re-prop-title{
  font-size: 22px;
  font-weight: 900;
  letter-spacing: 2px;
  margin: 0 0 18px;
}
.re-prop-meta{
  margin-top:auto;
  font-size: 14px;
  letter-spacing: 1px;
  opacity: .95;
}
.re-prop-meta-strong{ font-weight: 900; }
.re-prop-meta-sep{ margin: 0 10px; opacity:.8; }
.re-prop-meta-light{ opacity:.9; }
.re-prop-desc{
  margin-top: 14px;
  font-size: 13px;
  line-height: 1.7;
  opacity: .9;
  max-width: 92%;
}
.re-prop:hover .re-prop-overlay{ background: rgba(0,0,0,.50); }
.re-prop:hover{ transform: translateY(-3px); }

.empty {
  padding: 34px;
  text-align: center;
  background: #fff;
  border-radius: 12px;
  border: 1px dashed rgba(11,27,84,.25);
}

.listing-section{ padding-bottom: 80px; }
</style>