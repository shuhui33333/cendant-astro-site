---
type ContactItem = {
  label: string;
  value: string;
  icon: string; // /images/xxx.png
};

const props = Astro.props as {
  titleZh?: string;
  titleEn?: string;
  items?: ContactItem[];
};

const titleZh = props.titleZh ?? "联系我们";
const titleEn = props.titleEn ?? "CONTACT US";
const items: ContactItem[] = props.items ?? [];
---

<section class="contact-intro-banner">
  <div class="container">
    <div class="cib-title">
      <h2>{titleZh}</h2>
      <div class="cib-en">{titleEn}</div>
    </div>

    <div class="cib-grid">
      {items.map((it) => (
        <div class="cib-card">
          <img src={it.icon} alt={it.label} loading="lazy" />
          <div class="cib-label">{it.label}</div>
          <div class="cib-value">{it.value}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* 整体背景：与模板 fun facts 风格一致 */
  .contact-intro-banner {
    background: linear-gradient(180deg, rgba(7, 16, 55, 0.92), rgba(7, 16, 55, 0.86));
    color: #fff;
    padding: 48px 0 40px;
    margin-bottom: 36px;
  }

  .cib-title {
    margin-bottom: 26px;
  }

  .cib-title h2 {
    margin: 0;
    font-size: 28px;
    font-weight: 900;
    letter-spacing: 0.5px;
  }

  .cib-en {
    margin-top: 8px;
    font-size: 13px;
    letter-spacing: 3px;
    opacity: 0.85;
  }

  /* 卡片区域 */
  .cib-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 18px;
  }

  .cib-card {
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.16);
    border-radius: 14px;
    padding: 20px 16px 18px;
    text-align: center;
  }

  .cib-card img {
    width: 42px;
    height: 42px;
    object-fit: contain;
    margin-bottom: 12px;
    display: inline-block;
  }

  .cib-label {
    font-size: 14px;
    font-weight: 700;
    margin-bottom: 6px;
  }

  .cib-value {
    font-size: 13px;
    opacity: 0.9;
    word-break: break-word;
  }

  @media (max-width: 992px) {
    .cib-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 576px) {
    .cib-grid {
      grid-template-columns: 1fr;
    }
  }
</style>