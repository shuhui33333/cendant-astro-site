---
interface Item {
  title: string;
  body: string; // HTML 字符串
}

const { items } = Astro.props as { items: Item[] };
---

<div class="accordion">
  {items.map((item, index) => (
    <details class="accordion-item">
      <summary>
        <span class="arrow">➜</span>
        <span class="title">{item.title}</span>
      </summary>

      <div class="content" set:html={item.body} />
    </details>
  ))}
</div>

<style>
  .accordion {
    display: grid;
    gap: 16px;
  }

  .accordion-item {
    border: 1px solid #e5e7eb;
    border-radius: 14px;
    padding: 18px 20px;
    background: #fff;
  }

  summary {
    display: flex;
    align-items: center;
    gap: 14px;
    cursor: pointer;
    list-style: none;
    font-size: 16px;
    font-weight: 600;
  }

  summary::-webkit-details-marker {
    display: none;
  }

  .arrow {
    color: #f4a33b; /* 模板橙色箭头 */
    transition: transform 0.25s ease;
  }

  details[open] .arrow {
    transform: rotate(90deg);
  }

  .content {
    margin-top: 14px;
    padding-left: 26px;
    line-height: 1.9;
    color: #444;
  }

  .content ul {
    margin: 10px 0 10px 18px;
  }

  .content li {
    margin-bottom: 6px;
  }
</style>