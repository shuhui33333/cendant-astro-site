---
const { items = [] } = Astro.props;
---

<div class="accordion">
  {items.map((it) => (
    <details class="item">
      <summary class="header">
        <span class="title">{it.title}</span>
        <span class="chevron" aria-hidden="true"></span>
      </summary>

      <div class="content">
        {it.body}
      </div>
    </details>
  ))}
</div>

<style>
  .accordion {
    display: grid;
    gap: 14px;
  }

  .item {
    border: 1px solid #e6e9f2;
    border-radius: 16px;
    background: #fff;
    overflow: hidden;
  }

  .header {
    list-style: none;
    cursor: pointer;
    padding: 18px 22px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    user-select: none;
  }

  .header::-webkit-details-marker {
    display: none;
  }

  .title {
    font-size: 17px;
    font-weight: 800;
    color: #0B1F6B;
  }

  /* 右侧箭头（更商务） */
  .chevron {
    width: 10px;
    height: 10px;
    border-right: 2px solid #0B1F6B;
    border-bottom: 2px solid #0B1F6B;
    transform: rotate(45deg);
    transition: transform 0.25s ease;
    margin-left: 12px;
  }

  details[open] .chevron {
    transform: rotate(-135deg);
  }

  .content {
    padding: 0 22px 22px 22px;
    line-height: 1.9;
    color: #1a1a1a;
  }

  .content p {
    margin: 0 0 10px;
  }

  .content ul {
    margin: 8px 0 0 18px;
  }

  .content li {
    margin-bottom: 6px;
  }
</style>