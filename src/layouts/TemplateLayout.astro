      })();
    </script>

    <!-- ✅ submenu 防关闭（保持你之前的逻辑） -->
    <script is:inline>
      (function () {
        function qs(sel, root) { return (root || document).querySelector(sel); }
        function qsa(sel, root) { return Array.prototype.slice.call((root || document).querySelectorAll(sel)); }

        function closeAll(exceptKey) {
          qsa("[data-submenu-panel]").forEach(function (panel) {
            var key = panel.getAttribute("data-submenu-panel");
            if (exceptKey && key === exceptKey) return;
            panel.style.display = "none";
          });
        }

        document.addEventListener("click", function (e) {
          var root = e.target && e.target.closest && e.target.closest("[data-re-root-toggle]");
          if (!root) return;
          e.preventDefault();
        }, true);

        document.addEventListener("click", function (e) {
          var insideMenu = e.target && e.target.closest && e.target.closest(".tpl-re-dd");
          if (!insideMenu) return;
          e.stopPropagation();
        }, true);

        document.addEventListener("click", function (e) {
          var t = e.target && e.target.closest && e.target.closest("[data-toggle-submenu]");
          if (!t) return;

          e.preventDefault();
          e.stopPropagation();

          var key = t.getAttribute("data-toggle-submenu");
          if (!key) return;

          var panel = qs('[data-submenu-panel="' + key + '"]');
          if (!panel) return;

          var isOpen = panel.style.display === "block";
          closeAll(key);
          panel.style.display = isOpen ? "none" : "block";

          var rootLi = t.closest && t.closest("li.dropdown");
          if (rootLi) {
            rootLi.classList.add("open");
            var toggle = qs("[data-re-root-toggle]", rootLi);
            if (toggle) toggle.setAttribute("aria-expanded", "true");
          }
        }, true);

        document.addEventListener("click", function (e) {
          var insideDropdown = e.target && e.target.closest && e.target.closest("#re-dd-root");
          if (insideDropdown) return;
          closeAll(null);
        }, true);
      })();
    </script>

    <!-- ✅ 三/四语言切换：文本节点翻译（走 /api/translate） -->
    <script is:inline>
      (function () {
        var LANG_KEY = "site_lang";
        var lang = localStorage.getItem(LANG_KEY) || "zh-CN"; // 默认简体

        function paintButtons() {
          ["zh-CN","zh-TW","zh-HK","en"].forEach(function (k) {
            document.querySelectorAll('[data-lang-btn="' + k + '"]').forEach(function (b) {
              b.className = "btn btn-" + (lang === k ? "primary" : "default") + " btn-xs";
            });
          });
        }

        function isEnglishLike(t){
          return /^[\x00-\x7F\s0-9.,:;!?'"()\-\+\/]+$/.test(t);
        }

        function decodeHtml(s) {
          var d = document.createElement("textarea");
          d.innerHTML = s;
          return d.value;
        }

        async function translatePageTo(target) {
          console.log("[i18n] translate to:", target);
          paintButtons();

          var walker = document.createTreeWalker(document.body, NodeFilter.SHOW_TEXT, null);
          var nodes = [];
          var texts = [];
          var map = new Map();

          while (walker.nextNode()) {
            var n = walker.currentNode;
            if (!n || !n.nodeValue) continue;

            var raw = n.nodeValue;
            var t = raw.trim();
            if (!t) continue;

            var p = n.parentElement;
            if (!p) continue;

            var tag = p.tagName;
            if (tag === "SCRIPT" || tag === "STYLE" || tag === "NOSCRIPT") continue;
            if (p.closest("script,style,noscript,textarea,input,select,option,code,pre")) continue;

            // 纯英文/数字就不翻
            if (isEnglishLike(t)) continue;

            if (!map.has(t)) {
              map.set(t, { trans: "" });
              texts.push(t);
            }
            nodes.push({ node: n, key: t });
          }

          if (!texts.length) {
            console.log("[i18n] no text to translate");
            return;
          }

          async function batchTranslate(batch) {
            console.log("[i18n] call /api/translate target=", target, "size=", batch.length);
            var res = await fetch("/api/translate", {
              method: "POST",
              headers: {"Content-Type":"application/json"},
              body: JSON.stringify({ target: target, texts: batch })
            });

            var json = await res.json().catch(function(){ return {}; });

            if (!res.ok) {
              console.error("[i18n] API failed:", res.status, json);
              alert("翻译接口失败: " + res.status + "\\n请打开F12看 Network/Console");
              throw new Error("translate failed");
            }
            return json.data || [];
          }

          var BATCH = 40;
          for (var i = 0; i < texts.length; i += BATCH) {
            var part = texts.slice(i, i + BATCH);
            var out = await batchTranslate(part);
            for (var j = 0; j < part.length; j++) {
              map.get(part[j]).trans = out[j] || "";
            }
          }

          nodes.forEach(function (it) {
            var tr = map.get(it.key) && map.get(it.key).trans;
            if (tr) it.node.nodeValue = it.node.nodeValue.replace(it.key, decodeHtml(tr));
          });

          console.log("[i18n] translate done:", target);
        }

        function setLang(next) {
          lang = next;
          localStorage.setItem(LANG_KEY, next);
          paintButtons();

          // 简体：恢复原文（刷新）
          if (next === "zh-CN") {
            location.reload();
            return;
          }

          // zh-TW / en：走 API
          translatePageTo(next);
        }

        // ✅ 事件委托：按钮永远可点；且不会触发菜单关闭/跳转
        document.addEventListener("click", function (e) {
          var btn = e.target && e.target.closest && e.target.closest("[data-lang-btn]");
          if (!btn) return;

          e.preventDefault();
          e.stopPropagation();

          var next = btn.getAttribute("data-lang-btn");
          console.log("[i18n] click:", next);
          setLang(next);
        }, true);

        // 初始化
        paintButtons();

        // 如果用户之前选过繁体/英文，自动翻译
        if (lang === "en" || lang === "zh-TW") {
          translatePageTo(lang);
        }
      })();
    </script>

