---
const {
  title = "首页",
  description = "墨尔本·胜腾国际 - 房产投资 / 项目开发 / 租赁管理 / 移民服务",
} = Astro.props;

const nav = [
  { href: "/", label: "首页" },
  { href: "/real-estate", label: "地产资讯" },
  { href: "/immigration", label: "移民服务" },
  { href: "/company-profile", label: "公司概况" },
  { href: "/contact", label: "联系我们" },
];
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | Cendant</title>
    <meta name="description" content={description} />

    <!-- 模板 CSS（来自你上传的 index.html 引用） -->
    <link rel="stylesheet" href="/template15/css/bootstrap.css" />
    <link rel="stylesheet" href="/template15/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/template15/css/style.css" />
    <link rel="stylesheet" href="/template15/css/mainStyles.css" />

    <!-- 轮播（保留 properties for sale 用） -->
    <link rel="stylesheet" href="/template15/css/owl.carousel.css" />
    <link rel="stylesheet" href="/template15/css/owl.theme.css" />

    <!-- 字体（模板里是 http，这里换成 https 避免混合内容） -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Hind:300,400,500,600,700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- banner + navbar（保持模板结构与 class，确保 CSS 生效） -->
    <div class="banner" id="home">
      <nav class="navbar navbar-default">
        <div class="navbar-header navbar-left">
          <button
            type="button"
            class="navbar-toggle collapsed"
            data-toggle="collapse"
            data-target="#bs-example-navbar-collapse-1"
          >
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <h1>
            <a class="navbar-brand" href="/">
              <span>Melbourne</span> Cendant
            </a>
          </h1>
          <i class="fa fa-home" aria-hidden="true"></i>
        </div>

        <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-1">
          <nav class="link-effect-2" id="link-effect-2">
            <ul class="nav navbar-nav">
              {nav.map((i) => (
                <li class={Astro.url.pathname === i.href ? "active" : ""}>
                  <a href={i.href}><span data-hover={i.label}>{i.label}</span></a>
                </li>
              ))}
            </ul>
          </nav>
        </div>

        <!-- 右上社交图标：保留模板样式，但你也可以之后换成微信/电话 -->
        <div class="agileits-social top_content">
          <ul>
            <li>
              <a href="#" aria-label="facebook"><i class="fa fa-facebook"></i></a>
            </li>
            <li>
              <a href="#" aria-label="twitter"><i class="fa fa-twitter"></i></a>
            </li>
            <li>
              <a href="#" aria-label="rss"><i class="fa fa-rss"></i></a>
            </li>
            <li>
              <a href="#" aria-label="vk"><i class="fa fa-vk"></i></a>
            </li>
          </ul>
        </div>
      </nav>
    </div>

    <!-- 页面内容插槽 -->
    <slot />

    <!-- 模板 JS（注意：从 public 目录引用，统一用 /template15/... 路径） -->
    <script src="/template15/js/jquery-2.1.4.min.js" is:inline></script>
    <script src="/template15/js/bootstrap.js" is:inline></script>

    <!-- 首页 slider（模板用） -->
    <script src="/template15/js/mainScript.js" is:inline></script>
    <script src="/template15/js/rgbSlide.min.js" is:inline></script>

    <!-- 数字滚动（fun facts 用） -->
    <script src="/template15/js/numscroller-1.0.js" is:inline></script>

    <!-- 轮播（properties for sale 用） -->
    <script src="/template15/js/owl.carousel.js" is:inline></script>
    <script is:inline>
      (function () {
        // 防止在没有 #owl-demo 的页面报错
        if (typeof window.jQuery === "undefined") return;
        window.jQuery(function ($) {
          var el = $("#owl-demo");
          if (!el.length || !el.owlCarousel) return;
          el.owlCarousel({
            autoPlay: 3000,
            autoPlay: true,
            items: 3,
            itemsDesktop: [640, 5],
            itemsDesktopSmall: [414, 4],
          });
        });
      })();
    </script>

    <!-- 平滑滚动（如果你不用锚点，也不影响） -->
    <script src="/template15/js/SmoothScroll.min.js" is:inline></script>
    <script src="/template15/js/move-top.js" is:inline></script>
    <script src="/template15/js/easing.js" is:inline></script>
  </body>
</html>